<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- 1. 기본 패턴 및 속성 정의 -->
    <conversionRule conversionWord="clr" class="org.springframework.boot.logging.logback.ColorConverter"/>

    <property name="CONSOLE_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} %white([%thread]) %clr([%p]) %cyan([trace=%X{dd.trace_id} span=%X{dd.span_id}]) %blue(%logger{5}) - %msg%n"/>
    <property name="ROLLING_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] [%-5level] [trace=%X{dd.trace_id} span=%X{dd.span_id}] %logger{5} - %msg%n"/>

    <property name="LOG_DIR" value="/logs"/>
    <property name="FILE_PATH_NAME" value="${LOG_DIR}/eatda.log"/>
    <property name="LOG_NAME_PATTERN" value="${LOG_DIR}/eatda-%d{yyyy-MM-dd}.%i.log"/>
    <property name="MAX_FILE_SIZE" value="10MB"/>
    <property name="TOTAL_SIZE" value="100MB"/>
    <property name="MAX_HISTORY" value="7"/>

    <!-- 2. Appender 분리 정의 -->

    <!-- 로컬 개발 환경용: 기존 텍스트 콘솔 Appender -->
    <appender name="CONSOLE_TEXT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- 서버 환경용: Datadog 친화 JSON 콘솔 Appender -->
    <appender name="CONSOLE_JSON" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder"/>
    </appender>

    <!-- 서버 환경용: 기존 롤링 파일 Appender (백업용) -->
    <appender name="ROLLING_LOG_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${FILE_PATH_NAME}</file>
        <encoder>
            <pattern>${ROLLING_PATTERN}</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_NAME_PATTERN}</fileNamePattern>
            <maxFileSize>${MAX_FILE_SIZE}</maxFileSize>
            <maxHistory>${MAX_HISTORY}</maxHistory>
            <totalSizeCap>${TOTAL_SIZE}</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- 3. 프로필별 Appender 참조 설정 -->

    <!-- local 프로필: 콘솔 출력만 사용하고, 롤링 파일은 만들지 않음 -->
    <springProfile name="local">
        <root level="INFO">
            <appender-ref ref="CONSOLE_TEXT"/>
        </root>
    </springProfile>

    <!-- dev 프로필: JSON 콘솔 출력과 기존 텍스트 롤링 형식 사용 -->
    <springProfile name="dev">
        <root level="INFO">
            <appender-ref ref="CONSOLE_JSON"/>
            <appender-ref ref="ROLLING_LOG_FILE"/>
        </root>
    </springProfile>

    <!-- prod 프로필: JSON 콘솔 출력과 기존 텍스트 롤링 사용 -->
    <springProfile name="prod">
        <property name="LOG_NAME_PATTERN" value="${LOG_DIR}/eatda-%d{yyyy-MM-dd}.%i.log.gz"/>

        <root level="INFO">
            <appender-ref ref="CONSOLE_JSON"/>
            <appender-ref ref="ROLLING_LOG_FILE"/>
        </root>
    </springProfile>

    <springProfile name="migration">
        <property name="LOG_NAME_PATTERN" value="${LOG_DIR}/eatda-%d{yyyy-MM-dd}.%i.log.gz"/>

        <root level="INFO">
            <appender-ref ref="CONSOLE_JSON"/>
            <appender-ref ref="ROLLING_LOG_FILE"/>
        </root>
    </springProfile>

</configuration>
